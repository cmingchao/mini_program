.details {
  position: relative;
  top: -10rpx;
}

.details .info-item {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
  color: #707070;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.details .info-item .info {
  flex: 1;
}

.details .info-item .info .title {
  font-size: 30rpx;
  color: #1c1c1c;
}

.details .info-item .info .text {
  position: relative;
  margin-top: 10rpx;
  margin-left: 26rpx;
  font-size: 28rpx;
}

.details .info-item .info .text::before {
  content: '';
  width: 8rpx;
  height: 8rpx;
  background-color: #8c7eec;
  position: absolute;
  top: 18rpx;
  left: -20rpx;
  transform: rotate(-45deg);
}

.details .info-item image {
  width: 60rpx;
  height: 60rpx;
}

.details .info-item-1 {
  border-radius: 15rpx 15rpx 0 0;
}

.details .info-item-1 .info .title {
  font-size: 36rpx;
}

.details .info-item-1 .info .shop {
  font-size: 26rpx;
  align-items: center;
  margin-top: 10rpx;
}

.details .info-item-1 .info .shop-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.details .info-item-1 navigator {
  border: 1rpx solid #8c7eec;
  color: #8c7eec;
  border-radius: 30rpx;
  padding: 10rpx;
  display: inline-flex;
  justify-content: center;
  align-items: center;
}

.details .info-item-2 .info .title {
  font-size: 34rpx;
  color: #666;
}

.details .info-item-2 .info .text {
  color: #010101;
  font-size: 32rpx;
}
.details .receive{
  width: 100%;
  height: 110rpx;
  border: none;
  background-color: #8C7EEC;
  color: #fff;
  border-radius: 0;
  font-size: 32rpx;
}