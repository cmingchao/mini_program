<view class='ticket-item-wrap'>
  <view class='ticket-item' bindtap='goActivityDetails'>
    <text class='index' wx:if="{{url==='rank'}}">{{index+1}}</text>
    <view class='logo'>
      <image src='{{res.img}}'></image>
    </view>
    <view class='info'>
      <view class='title'>{{res.title}}</view>
      <view class='shop-name'>
        <image src='/images/dianpu.png'></image>
        <text>{{res.shopName}}</text>
      </view>
      <view class='deadline'>
        <text>有效期至{{res.deadline}}</text>
        <text>已售{{res.num}}</text>
      </view>
    </view>
    <slot></slot>
  </view>
</view>