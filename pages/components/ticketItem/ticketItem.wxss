.ticket-item-wrap{
  padding-bottom: 20rpx;
}
.ticket-item{
  display: flex;
  border-radius: 6rpx;
  position: relative;
  height: 200rpx;
  margin: 0rpx 30rpx;
  background-color: #fff;
  box-shadow: 2px 2rpx 2rpx 2rpx rgba(153,153,153,.5);
}
.ticket-item .index{
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  font-weight: bold;
  font-size: 40rpx;
  color: #fff;
}

.ticket-item .logo{
  width: 200rpx;
  height: 100%;
  overflow: hidden;
   border-radius: 6rpx;
}
.ticket-item .info{
  flex: 1;
  padding: 10rpx 10rpx 10rpx 20rpx;
  position: relative;
}
.ticket-item .info .title{
  font-size: 30rpx;
}
.ticket-item .info .shop-name{
  display: flex;
  align-items: center;
  color: #666;
  font-size: 26rpx;
  margin-top: 20rpx;
}
.ticket-item .info .shop-name image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.ticket-item .info .deadline{
  display: flex;
  justify-content: space-between;
  margin-top: 52rpx;
  font-size:24rpx;
  color: #999;
}
.ticket-item .status{
  position: absolute;
  right:10rpx;
  top: 40rpx;
  width: 140rpx;
  height: 120rpx;
}