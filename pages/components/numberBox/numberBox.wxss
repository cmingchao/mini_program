/*主容器*/

.stepper {
  width: 80px;
  height: 26px;
  /*给主容器设一个边框*/
  border: 1px solid #ccc;
  border-radius: 3px;
  margin: 0 auto;
}

/*加号和减号*/

.stepper .obtn {
  width: 19px !important;
  line-height: 26px;
  text-align: center !important;
  float: left;
}

/*数值*/

.stepper .onumber {
  width: 40px !important;
  height: 26px !important;
  float: left;
  margin: 0 auto;
  text-align: center;
  font-size: 12px;
  /*给中间的input设置左右边框即可*/
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
  border-top: none;
  border-bottom: none;
  padding: 0;
  border-radius: 0;
}

/*普通样式*/

.stepper .normal {
  color: black !important;
}

/*禁用样式*/

.stepper .disabled {
  color: #ccc !important;
}
