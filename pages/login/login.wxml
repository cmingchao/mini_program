<view id='page'>
  <view id='box'>
    <view class='welcome flex'>
      <view class='logo'>
        <image src='/images/logo.png'></image>
      </view>
      <text>欢迎使用</text>
      <text class='font-weight'>戛纳湾小程序</text>
    </view>
    <form bindsubmit='login'>
      <view class='form-item'>
        <input name='phoneNumber' type='number' placeholder='请输入手机号' maxlength='11' value='{{formData.phoneNumber}}' bindinput='inputPhoneNumber'></input>
      </view>
      <view class='form-item'>
        <input name='validateCode' disabled='{{disabledCode}}' placeholder='请输入验证码' maxlength='11' value='{{formData.validateCode}}' bindinput='inputValidateCode'></input>
      </view>
      <view class='tips' bindtap='getValidateCode' wx:if='{{flag}}'>获取验证码</view>
      <view class='tips' wx:else>重新获取({{seconds}})s</view>
      <view class='btn-wrap'>
        <button plain='true' disabled='{{disabled}}' class="{{disabled?'disabled':''}}" loading='{{loading}}' hover-class='none' form-type='submit'>完成</button>
      </view>
    </form>
  </view>
</view>