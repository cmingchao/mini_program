.welcome {
  flex-direction: column;
  align-items: center;
  padding-top: 60rpx;
}

.welcome .logo {
  width: 160rpx;
  height: 160rpx;
}

.welcome text {
  margin-top: 15rpx;
  font-size: 36rpx;
}

form {
  margin-top: 120rpx;
  display: block;
}

form view {
  display: flex;
  justify-content: center;
}

form .form-item {
  margin-top: 30rpx;
}

form .form-item input {
  width: 85%;
  height: 100rpx;
  background-color: #f2f2f2;
  border-radius: 12rpx;
  padding-left: 20rpx;
}

form .tips {
  justify-content: flex-end;
  color: #5ca8f3;
  margin-top: 6rpx;
  padding-right: 8%;
}

form .btn-wrap {
  margin-top: 50rpx;
}

form .btn-wrap button {
  width: 220rpx;
  height: 80rpx;
  background-color: rgba(140, 126, 236, 1);
  border-radius: 40rpx;
  border: none;
  color: #fff;
}

form .btn-wrap button.disabled {
  background-color: rgba(215, 210, 248, 1);
  color: #fff;
}
