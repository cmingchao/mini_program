.content .order-wrap-item{
  margin-top: 20rpx;
  border: 1px solid rgba(221,221,221,0.5);
  border-radius: 12rpx;
}
.content .order-info {
  border-radius: 12rpx;
  background-color: #fff;
  padding: 20rpx 30rpx;
  font-size: 24rpx;
  line-height: 1.8;
  position: relative;
}

.content .order-info view text{
  color: #666;
}

.content .order-info .info{
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  font-size:24rpx;
}

.content .order-info image.icon-emergency {
  position: absolute;
  left: -5rpx;
  top: -20rpx;
  width: 40rpx;
  height: 60rpx;
}

.content .reception {
  height: 60rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  background-color: #fafafa;
  border-radius:12rpx 12rpx 0 0;
  margin-top: 20rpx;
}
.order-box {
  margin-top: 0rpx;
}
.order-box .order-item{
  border-radius: 0;
}
