<import src="/pages/mainEntrance/template/template.wxml" />
<view id='page'>
  <view id='box' class="{{!list.length?'bgwhite':''}}">
    <view class='content'>
      <block wx:for="{{list}}" wx:key="{{index}}" wx:if="{{list.length}}">
        <view class='order-wrap-item'>
          <view class='order-status'>
            <view class='status font-large text-center'>
              <text>提货码：</text>
              <text class='color-black'>{{item.captcha || '无'}}</text>
            </view>
            <view class='info'>
              <view>
                <view wx:if='{{item.giveType==1}}'>
                  <text>时间：</text>
                  <text>{{item.deliveryTime}}之前送达</text>
                </view>
                <view>
                  <text>地址：</text>
                  <text wx:if='{{item.giveType==1}}'>{{item.deliveryAddressName || '无'}}</text>
                  <text wx:else>{{item.deskName || '无'}}</text>
                </view>
                <view>
                  <text>电话：</text>
                  <text class='color-lightblue' wx:if='{{item.giveType==1}}'>{{item.deliveryMobile || '无'}}</text>
                  <text class='color-lightblue' wx:else>{{item.deskMobile || '无'}}</text>
                </view>
              </view>
              <view>
                <view wx:if='{{item.giveType==1}}'>
                  <text>当前状态：</text>
                  <text class='color-lightblue' wx:if="{{item.finishedStatus ==0}}">未送出</text>
                  <text class='color-lightblue' wx:elif="{{item.finishedStatus==1}}">送货中</text>
                  <text class='color-lightblue' wx:elif="{{item.finishedStatus==2}}">已结束</text>
                </view>
                <view wx:else>
                  <text>当前状态：</text>
                  <text class='color-lightblue'>待自提</text>
                </view>
                <view wx:if='{{item.giveType==1}}'>
                  <text>配送员：</text>
                  <text>{{item.deliveryUserName || '无'}}</text>
                </view>
              </view>
            </view>
            <image class='icon-emergency' src='/pages/images/icon-emergency.png' wx:if='{{item.gradeNum==1}}'></image>
          </view>
          <view>
            <view class="reception font-small color-lightblue">
              <text>{{item.deskName || '无'}}</text>
            </view>
            <template is='order-give' data="{{item,currentPage}}" />
          </view>
        </view>
      </block>
      <view class='noData' wx:if="{{!list.length}}">
        <text>暂无数据！</text>
      </view>
    </view>
    <template is="bottomTabBar" data="{{currentPage}}" />
  </view>
</view>