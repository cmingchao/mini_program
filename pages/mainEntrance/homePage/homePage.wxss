/* pages/mainEntrance/homePage/homePage.wxss */

.header {
  background-color: #fff;
}

.header .condition {
  justify-content: center;
  color: #999;
  font-size: 28rpx;
  padding: 20rpx 30rpx;
  position: relative;
}

.header .condition .word {
  position: absolute;
  right: 30rpx;
}
.header .project-status{
  margin-top: 10rpx;
  padding-bottom: 30rpx;
}
.header .project-status view{
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  align-items: center;
  border-right: 1px solid lightgray;
}
.header .project-status view:last-child{
  border-right:none;
}
.header .project-status view .number{
  font-size: 48rpx;
  font-weight: bold;
}
.header .project-status view:nth-child(1) .number{
  color:#5cb429;
}
.header .project-status view:nth-child(2) .number{
  color:#f76395;
}
.header .project-status view:nth-child(3) .number{
  color:#efb52d;
}
.header .project-status view:last-child .number{
  color:#6081ff;
}
.header .project-status view .name{
  color:#999;
  font-size: 24rpx;
  margin-top: 4rpx;
}
