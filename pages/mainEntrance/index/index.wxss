#box{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
}
#box #login{
  width: 100%;
}
#login .welcome{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
#login .welcome .logo{
  width: 300rpx;
  height: 260rpx;
}
#login .welcome view{
  font-size: 44rpx;
}
#login .welcome view:last-child{
  font-weight: bold;
  margin-top: 10rpx;
}
#login .form-item {
  margin-top: 40rpx;
}

#login .form-item form view{
  width: 85%;
  margin: 0 auto;
}

#login .form-item form input{
  width: 100%;
  background-color: #f2f2f2;
  border-radius: 12rpx;
  margin-top: 10rpx;
  height: 90rpx;
  font-size: 36rpx;
  border:1px solid #ccc;
  padding-left: 10rpx;
  box-sizing: border-box;

}

 #login .form-item form .login button{
  width: 100%; 
  height: 90rpx;
   color: #fff;
   padding: 0;
   justify-content: center;
   font-size: 36rpx;
   margin-top: 10rpx;
 }
 .input-placeholder{
   color:#999;
   font-size:36rpx;
 }