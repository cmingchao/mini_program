#box {
  background-color: #f2f2f2;
}

/* 内容content开始*/


.content .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
}

.content .btn button {
  height: 60rpx;
  background-color: #ffb30f;
  color: #fff;
  font-size: 28rpx;
  border: none;
}

/* 模态框 */
#modal {
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

#modal .modal-item {
  width: 80%;
  background-color: #fff;
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
#modal .modal-item .modal-title{
  margin-top: 50rpx;
  font-size: 36rpx;
}
#modal .modal-item .modal-content{
  margin-top: 50rpx;
}
#modal .modal-item .modal-content input{
  border:1px solid #ccc;
  width: 360rpx;
  height: 70rpx;
  padding-left: 10rpx;
}
#modal .modal-item .modal-footer{
  margin-top: 50rpx;
  width: 100%;
  display: flex;
}
#modal .modal-item .modal-footer view{
  width: 50%;
}
#modal .modal-item .modal-footer view button{
  width: 100%;
  border-radius: 0;
  border: none;
  color: #FFB30F;
  font-size: 36rpx;
}
#modal .modal-item .modal-footer view button.comfirm{
  border-top: 1px solid #e6e6e6;
  border-right: 1px solid #e6e6e6;
}
#modal .modal-item .modal-footer view button.cancel{
  border-top: 1px solid #e6e6e6;
}